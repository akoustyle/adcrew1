<div>
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel heading campaign_image center">
        <%#= image_tag @campaign.image.url(:medium) %>
      </div>
      <div class="panel-body">
        <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @talent.photos.attached? ? cl_image_path(@talent.photos.first.key) : asset_path('background.jpeg') %>)">
          <h1><%= @talent.name %> </h1>
          <p><%= @talent.about %></p>
         </div>
      </div>
      <div class="panel-footer">
        <div class="row">
          <div class="col-md-6">
            <div id="user">
              <p> <%= @talent.title %></p>
              <div style="width:400px; height:400px">
                <%# <%= @talent.video.attached? ? cl_video_tag(url_for(@talent.video), style: "width:100%; height:auto", controls: '') : asset_path('video1.mp4')%>
\                <video controls width="480" height="288">
                  <source src="<%= @talent.audience_female %>" type="video/mp4" />
                </video>

              </div>
            </div>
          </div>
          <% @talent.photos.each do |photo| %>
		  		  <%= cl_image_tag photo.key, style: "height: 85vh" %>
		      <% end %>
          <div class="col md-6">
            <div class="btn-group pull-right">
              <%# if user_signed_in? %>
                <%= link_to "Edit", edit_talent_path, class: "btn btn-info" %>
                <%= link_to "Delete", talent_path, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger" %>
                <%= link_to "Back", talents_path, class: "btn btn-primary" %>
              <%# end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
