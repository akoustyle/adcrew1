
<div class="container d-flex justify-content-space-between" style="width: 100vw;margin-bottom: 50px;" >
    <%# @talent.photos.each do |photo| %>
        <div style="width: 500px; heigth: auto">
          <%= video_tag(url_for(@talent.video), style:'width:100%;height:auto;margin-left:-80px;margin-right:150px', controls: '', autoplay: :autoplay, muted: :muted) %>
        </div>
		<%# end %>

  <%#= cl_upload_tag(@talent.video.key) %>
  <div class="stat" style="position: relative; margin-left: 195px;width: 400px; background: radial-gradient(circle, red 10%, transparent 58%)">
    <div class="talent-name" style="position: absolute;top:-20px;left:-140px">
      <span style="font-weight: bold; font-family: Sketchalot"><%= @talent.name %></span><br>
      <span style="font-weigth: 200; font-style: italic"><%= @talent.title %></span>
    </div>
    <%= cl_image_tag @talent.photos.last.key, style:'width:400px;height:auto' %>
    <div class="youtube d-flex" style="width: 150px; height: 50px; position: absolute;top: 40px; right: -20px;">
      <a href="#", target="_blank">
        <span><i class="fab fa-youtube-square red-color"></i></span>
        <p><%= @talent.youtube_link %> abonnés</p>
      </a>
    </div>

    <div class="insta d-flex" style="width: 150px; height: 50px; position: absolute;top: 238px; right: -140px;">
      <a href="#", target="_blank">
        <span><i class="fab fa-instagram red-color"></i></span>
        <p><%= @talent.insta_link %> abonnés</p>
      </a>
    </div>

    <div class="tiktok d-flex" style="width: 150px; height: 50px; position: absolute;top: 420px; right: -33px;">
      <a href="#", target="_blank">
        <span><i class="fab fa-tiktok red-color"></i></span>
        <p><%= @talent.tiktok_link %> abonnés</p>
      </a>
    </div>
  </div>

</div>
<div class="col md-6">
  <div class="btn-group" style="display: flex;justify-content: space-evenly">
    <% if user_signed_in? %>
    <div>
      <%= link_to edit_talent_path do %>
        <%= image_tag 'pencil-front-premium.png', width: 30 %>
      <% end %>
    </div>
    <div>
      <%= link_to talent_path, method: :delete, data: { confirm: "Are you sure?"} do %>
        <%= image_tag 'trash-can-front-premium.png', width: 30 %>
      <% end %>
    </div>
    <div>
      <%= link_to talents_path do %>
        <%= image_tag 'back-front-premium.png', width: 30 %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
