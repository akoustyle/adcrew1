    <!-- Button trigger modal -->
      <div class="about d-flex" data-toggle="modal" data-target="#exampleModalLong" style="width: 150px; height: 50px; position: absolute;top: 420px; left: -13px;">
        <span><i class="fas fa-user"></i></span>
        <p style="color:balck;margin-left:10px">A propos</p>
      </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"><%= @talent.name%></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= @talent.about %>
        <% if @talent.photos.attached? %>
          <%= cl_image_tag @talent.photos.second.key, style:'width:300px;height:auto' %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
