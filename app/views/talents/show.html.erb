
<div class="container d-flex" style="margin-bottom: 150px;" >
  <div class="col-md-4">
    <%# @talent.photos.each do |photo| %>
      <div class="card-category" >
        <div style="width: 100vw; heigth: 100vh">
          <%= video_tag(url_for(@talent.video), style:'width:100%;height:auto', controls: '', autoplay: :autoplay, muted: :muted) %>
        </div>
      </div>
		<%# end %>
  </div>
  <div class="col-md-8">
    <div class="talent-name" style="position: absolute;top:0;left:260px">
      <span style="font-weight: bold; font-family: work sans"><%= @talent.name %></span><br>
      <span style="font-weigth: 200; font-style: italic"><%= @talent.title %></span>
    </div>
    <div class="talent-image" style="width: 400px; heigth: auto; background: radial-gradient(circle, red 15%, transparent 61%); position: absolute;top:-5vh;left:25vw">
      <%= cl_image_tag @talent.photos.last.key, style:'width:100%;height:100%' %>
    </div>

  </div>
  <%#= cl_upload_tag(@talent.video.key) %>
  <div class="stat" style="position: relative">
    <div class="youtube d-flex" style="width: 150px; height: 50px; position: absolute;top: 32vh; right: 2vw;">
      <span><i class="fab fa-youtube-square red-color"></i></span>
      <p><%= @talent.youtube_link %> abonnés</p>
    </div>

    <div class="insta d-flex" style="width: 150px; height: 50px; position: absolute;top: 51vh; right: -2vw;">
      <span><i class="fab fa-instagram red-color"></i></span>
      <p><%= @talent.insta_link %> abonnés</p>
    </div>

    <div class="tiktok d-flex" style="width: 150px; height: 50px; position: absolute;top: 75vh; right: 4vw;">
      <span><i class="fab fa-tiktok red-color"></i></span>
      <p><%= @talent.tiktok_link %> abonnés</p>
    </div>
  </div>

</div>
<div class="col md-6">
  <div class="btn-group" style="display: flex;justify-content: space-evenly">
    <% if user_signed_in? %>
    <div>
      <%= link_to edit_talent_path do %>
        <%= image_tag 'pencil-front-premium.png', width: 30 %>
      <% end %>
    </div>
    <div>
      <%= link_to talent_path, method: :delete, data: { confirm: "Are you sure?"} do %>
        <%= image_tag 'trash-can-front-premium.png', width: 30 %>
      <% end %>
    </div>
    <div>
      <%= link_to talents_path do %>
        <%= image_tag 'back-front-premium.png', width: 30 %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
