              placeholder: t('contact.form.placeholder3')%><br>

            <div class= "d-none">
              <%= f.label :nickname %>
              <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
            </div>

            <%= f.submit t('contact.form.submit'), class: 'btn-neumorphism', style: 'background-color:transparent; color:red' %>
