  <div class="smooth">

    <section class="campaign" id="show-campaign">
        <div class="content">
          <div class="text-content">
            <a href="#">Back</a>
            <h2><%= @campaign.name %></h2>
            <div class="py-3">
              <p><i class="fa-solid fa-bullseye pr-1 text-dark"></i><%= @campaign.objectif %></p>
              <p><i class="fa-solid fa-globe pr-1 text-dark"></i><%= @campaign.activation %></p>
              <p><i class="fa-solid fa-circle-dot pr-1 text-dark"></i><%= @campaign.reach %></p>
            </div>
          </div>
        </div>
        <div class="content">
          <div class="img-wrapper">
