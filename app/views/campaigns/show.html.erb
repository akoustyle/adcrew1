<div>
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel heading campaign_image center">
        <%#= image_tag @campaign.image.url(:medium) %>
      </div>
      <div class="panel-body">
        <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @campaign.photos.attached? ? cl_image_path(@campaign.photos.last.key) : asset_path('background.jpeg') %>)">
          <h3><%= @campaign.name %> </h3>
          <p><%= @campaign.objectif %></p>
          <%#= cl_image_tag @campaign.photo.key, height: 300, width: 400, crop: :fill %>
        </div>
      </div>
      <div class="panel-footer">
        <div class="row">
          <div class="col md-6">
            <div class="btn-group" style="display: flex;justify-content: space-evenly">
              <% if user_signed_in? %>
              <div>
                  <%= link_to edit_campaign_path do %>
                    <%= image_tag 'pencil-front-clay.png', width: 30 %>
                  <% end %>
              </div>
              <div>
                <%= link_to campaign_path, method: :delete, data: { confirm: "Are you sure?"} do %>
                  <%= image_tag 'trash-can-front-clay.png', width: 30 %>
                <% end %>
              </div>
              <div>
                <%= link_to campaigns_path do %>
                  <%= image_tag 'back-front-clay.png', width: 30 %>
                <% end %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="mainHeader"></div><!-- Ici se termine le mainHeader-->
<section id="pageContent">
  <div id="leftCol">
    <article class="feature" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @campaign.photos.attached? ? cl_image_path(@campaign.photos.first.key) : asset_path('background.jpeg') %>)">
    </article>
  </div>
  <% @campaign.photos.first(3).each do |photo| %>
		<%= cl_image_tag photo.key, style: "height: 45vh" %>
	<% end %>
  <div id="rightCol">
    <figure  class="features">
      <h1><%= @campaign.name %></h1>
      <h2><%= @campaign.objectif %> </h2>
      <h2> <%= @campaign.activation %></h2>
      <h2> Total reach <%= @campaign.reach %>M </h2>
    </figure>
  </div>
</section><!--Ici se termine le pageContent-->
<div id="mainFooter"></div><!--Ici se termine le mainFooter-->

