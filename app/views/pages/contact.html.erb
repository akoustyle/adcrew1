<section class="contact" id="talent">
  <div class="content">
    <div class="text-content">
      <h2><%= t('contact.title') %></h2>
      <p class="pt-3">
        <%= t('contact.paragraphe') %>
      </p>
      <div class="pt-3 moto">
        <p><span class="moto-title mb-3"></span><span class="moto-content pl-3"></span></p>
      </div>
    </div>
  </div>
  <div class="content">
    <div class="row">
      <div class="column">
        <form action="/action_page.php">
          <label for="fname"><%= t('contact.form.name') %></label>
          <%# <input type="text" id="fname" name="firstname" placeholder="Your name.."> %>
          <input type="text" id="fname" name="firstname" placeholder= <%= t('contact.form.placeholder') %> >
          <label for="lname"><%= t('contact.form.last_name') %></label>
          <input type="text" id="lname" name="lastname" placeholder=<%= t('contact.form.placeholder2') %>>
          <label for="pole"><%= t('contact.form.category') %></label>
          <select id="pole" name="pole">
            <option value="green">Green</option>
            <option value="fashion">Fashion</option>
            <option value="Lifestyle">Lifestyle (urban - make up)</option>
            <option value="autre"><%= t('contact.form.select') %></option>
          </select>
          <label for="subject"><%= t('contact.form.sujet') %></label>
          <textarea id="subject" name="subject" placeholder=<%= t('contact.form.placeholder3') %> style="height:170px"></textarea>
          <input type="submit" value=<%= t('contact.form.submit') %> class="btn-neumorphism" style="background-color:transparent;background:transparent;color:red">
        </form>
      </div>
      <div class="column">
        <iframe width="100%" height="100%" frameborder="0" style="border:0"
          src="https://www.google.com/maps/embed/v1/place?key=AIzaSyC0SzSJHhDb1W3KuSY8fwZQbancntTuWUs&q=104 rue RÃ©aumur 75002 Paris" allowfullscreen>
        </iframe>
      </div>
    </div>
  </div>
</section>
